<view class="container">
  <view class="card" style="margin-top: 120rpx;">
    <view class="title">仓储管理系统</view>
    <view class="subtitle" style="margin-bottom: 24rpx;">请使用 WMS 账号登录</view>

    <input class="input" placeholder="用户名" value="{{username}}" bindinput="onUsernameInput" />
    <input
      class="input"
      password
      placeholder="密码"
      value="{{password}}"
      bindinput="onPasswordInput"
    />
    <button class="btn-primary" loading="{{loading}}" bindtap="handleLogin">登录</button>
  </view>

  <view class="subtitle" style="text-align:center;margin-top: 24rpx;">
    API: https://HOSTS/api
  </view>
</view>
