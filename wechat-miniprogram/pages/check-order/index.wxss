.order-item {
  border-top: 1rpx solid #edf2f7;
  padding: 14rpx 0;
}

.current-order {
  padding: 14rpx;
  border-radius: 10rpx;
  background: #eff6ff;
  color: #1d4ed8;
  font-weight: 600;
}

.info-ok {
  margin: -4rpx 0 12rpx;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #ecfdf5;
  color: #166534;
  font-size: 24rpx;
}

.info-warn {
  margin: -4rpx 0 12rpx;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #fff7ed;
  color: #9a3412;
  font-size: 24rpx;
}

.stock-line {
  margin: 2rpx 0 14rpx;
  font-size: 26rpx;
  color: #475569;
}

.stock-value {
  color: #b91c1c;
  font-weight: 800;
  font-size: 32rpx;
}

.diff {
  margin-top: 6rpx;
  font-size: 24rpx;
  font-weight: 700;
}

.diff-ok {
  color: #166534;
}

.diff-warn {
  color: #b91c1c;
}
