button[size="mini"] {
  margin-bottom: 14rpx;
  margin-right: 10rpx;
}

.type-selector {
  border: 1rpx solid #d8e0ea;
  border-radius: 12rpx;
  min-height: 92rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  background: #fff;
}

.type-pill {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-weight: 700;
}

.type-in {
  background: #dcfce7;
  color: #166534;
}

.type-out {
  background: #fee2e2;
  color: #991b1b;
}

.type-arrow {
  margin-left: auto;
  color: #64748b;
  font-size: 24rpx;
}

.dropdown {
  border: 1rpx solid #d8e0ea;
  border-radius: 12rpx;
  max-height: 320rpx;
  overflow-y: auto;
  background: #fff;
  margin-top: -6rpx;
  margin-bottom: 14rpx;
}

.dropdown-item {
  padding: 14rpx 18rpx;
  border-bottom: 1rpx solid #eef2f7;
}

.dropdown-expand {
  padding: 10rpx 12rpx 2rpx;
  border-top: 1rpx solid #eef2f7;
}

.stock-highlight {
  margin: 8rpx 0 14rpx;
  color: #b91c1c;
  font-size: 34rpx;
  font-weight: 800;
}

.current-order {
  padding: 14rpx;
  border-radius: 10rpx;
  background: #eff6ff;
  color: #1d4ed8;
  font-weight: 600;
}

.order-item {
  border-top: 1rpx solid #edf2f7;
  padding: 12rpx 0;
}

.info-ok {
  margin: -4rpx 0 12rpx;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #ecfdf5;
  color: #166534;
  font-size: 24rpx;
}

.info-warn {
  margin: -4rpx 0 12rpx;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #fff7ed;
  color: #9a3412;
  font-size: 24rpx;
}

.stock-line {
  margin: 2rpx 0 14rpx;
  font-size: 26rpx;
  color: #475569;
}

.stock-value {
  color: #b91c1c;
  font-weight: 800;
  font-size: 32rpx;
}
